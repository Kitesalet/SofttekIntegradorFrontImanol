@model Data.ViewModels.WorkViewModel

<div class="modal fade" id="trabajoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Trabajos.</h5>
            </div>
            @if(Model.CodWork != 0)
            {
                @using (Html.BeginForm("UpdateWork", "/work", FormMethod.Post))
                {
                    @Html.HiddenFor(e => e.CodWork)
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-4 form-control-label">Servicio</label>
                                @Html.EditorFor(x=> x.CodService, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Proyecto</label>
                                @Html.EditorFor(x => x.CodProject, new { htmlAttributes = new { @class = "col-md-8 form-control", @required = "required" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Cantidad de Horas</label>
                                @Html.EditorFor(x=> x.HourQty, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Fecha</label>
                                @Html.EditorFor(x=> x.Date, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                    </div>
                }
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="DeleteWork({ codWork: @Model.CodWork })" data-bs-dismiss="modal">Eliminar</button>
                </div>
            }
            else
            {
                @using (Html.BeginForm("CreateWork", "/work", FormMethod.Post))
                {
                    ;
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-4 form-control-label">Servicio</label>
                                @Html.EditorFor(x=> x.CodService, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Proyecto</label>
                                @Html.EditorFor(x => x.CodProject, new { htmlAttributes = new { @class = "col-md-8 form-control", @required = "required" } })
                            </div>
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Cantidad de Horas</label>
                            @Html.EditorFor(x=> x.HourQty, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Fecha</label>
                            @Html.EditorFor(x=> x.Date, new {htmlAttributes = new {@class = "col-md-8 form-control", @required = "required" } })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                    </div>
                }
            }        
        </div>
    </div>
</div>